<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Memo">

    <!-- MemoDTO 매핑 -->
    <resultMap id="MemoMap" type="MemoDTO">
        <id property="id"       column="id"/>
        <result property="user_id" column="user_id"/>
        <result property="title"   column="title"/>
        <result property="content" column="content"/>
        <result property="created" column="created"/>
        <result property="updated" column="updated"/>
    </resultMap>

    <!-- 로그인한 유저의 메모 목록 -->
    <select id="findByUserId" parameterType="int" resultMap="MemoMap">
        SELECT *
        FROM memo
        WHERE user_id = #{userId}
        ORDER BY created DESC
    </select>

    <!-- 메모 한 건 조회 -->
    <select id="findById" parameterType="int" resultMap="MemoMap">
        SELECT *
        FROM memo
        WHERE id = #{id}
    </select>

    <!-- 메모 저장 -->
    <insert id="save" parameterType="MemoDTO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO memo (user_id, title, content)
        VALUES (#{user_id}, #{title}, #{content})
    </insert>

    <!-- 메모 수정 -->
    <update id="update" parameterType="MemoDTO">
        UPDATE memo
        SET title = #{title},
            content = #{content}
        WHERE id = #{id}
    </update>

    <!-- 메모 삭제 -->
    <delete id="delete" parameterType="int">
        DELETE FROM memo
        WHERE id = #{id}
    </delete>

</mapper>
